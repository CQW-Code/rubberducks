<!DOCTYPE html>
<html>
 <head>
 <% include ./partials/head %>
 </head>
 <body class="blue lighten-4">
   <header>
     <% include ./partials/navbar %>
   </header>
   <h1 class='center'>My Rubber Duckies</h1>
   <hr />
   <div class='row'>
     <div class='col s12 m4'>
       <h3>Add Duck</h3>
       <form action='/rubberducks' method='POST'>
         <input type='text' name='title' placeholder='Title' />
         <button class='btn btn-waves' type='submit'>Add</button>
       </form>
     </div>
     <table class='table col m8 s12'>
       <thead>
         <th>Title</th>
         <th>Edit</th>
         <th>x</th>
       </thead>
       <tbody>
          <% rubberducks.forEach( function(rubberduck) { %>
            <% var url = "/rubberducks/" + rubberduck.id + "?_method=DELETE" %>
            <% var editUrl = "/rubberducks/" + rubberduck.id + "/edit" %>
            <tr>
              <td><%= rubberduck.title %></td>
              <td>
                <a class="btn" href=<%= editUrl %>>Edit</a>
              </td>
              <td>
                <form method="POST" action=<%= url %> >
                  <button class="btn red">Delete</button>
                </form>
             </td>
         <% }); %>
       </tbody>
     </table>
   </body>
</html>